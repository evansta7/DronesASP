@model Drones.Models.UAVViewModel
@{
    ViewBag.Title = "AddUAV";
}

<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang=""> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang=""> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title.</title>
</head>

<body class="bg-dark">
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="" height="220" width="220">
                    </a>
                </div>
                <div class="login-form">
                    @using (Html.BeginForm("ChangeUAVAsync", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.DroneType)
                            @Html.TextBoxFor(m => m.DroneType, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.DroneStatus)
                            @Html.TextBoxFor(m => m.DroneStatus, new { @class = "form-control" })
                        </div>

                        <button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30">Add UAV</button>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

